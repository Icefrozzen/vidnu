<body>

    <div class="container">

        <form class="form-signin" action="verperfil.html" name="cadastro" method="post">

            <h2 class="form-signin-heading">Alterar</h2>



            <label for="inputPassword" class="sr-only">Senha Antiga</label>
            <input type="password" pattern=".{6,30}" required id="password" class="form-control" placeholder="Antiga senha" name="password" required title="Digite uma senha entre 6 e 30 caracteres">
            <label for="inputPassword" class="sr-only">Nova senha</label>
            <input type="password" pattern=".{6,30}" required id="password" class="form-control" placeholder="Nova senha" name="password" required title="Digite uma senha entre 6 e 30 caracteres">
            <center><button type="submit" class="btn btn-primary"> Confirmar </button> </center>

            <script language='javascript' type='text/javascript'>
function check(input) {
    if (input.value != document.getElementById('password').value) {
        input.setCustomValidity('As senhas devem sem iguais');
    } else {
        // input is valid -- reset the error message
        input.setCustomValidity('');
   }
}
            </script>


        </form>

    </div> <!-- /container -->
